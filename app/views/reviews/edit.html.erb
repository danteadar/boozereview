<h1>Edit Review:</h1>

<%= form_tag "/reviews/#{@review.id}/", method: :patch do  %>
  <div>
    <%= label_tag :brewer_name %>
    <%= text_field_tag :brewer_name, @review.brewer_name %>
  </div>
  <div>
    <%= label_tag :beer_name %>
    <%= text_field_tag :beer_name, @review.beer_name %>
  </div>
  <div>
    <%= label_tag :beer_type %>
    <%= text_field_tag :beer_type, @review.beer_type %>
  </div>
  <div>
    <%= label_tag :rating %>
    <%= number_field_tag :rating, @review.rating %>
  </div>
  <div>
    <%= label_tag :abv %>
    <%= number_field_tag :abv, @review.abv %>
  </div>
  <div>
    <%= label_tag :review %>
    <%= text_field_tag :review, @review.review %>
  </div>
  <div>
    <%= label_tag :personal %>
    <%= check_box_tag :personal, true, "personal" %>
  </div>
  
  <div>
    <%= label_tag :brewer_website %>
    <%= text_field_tag :brewer_website, @review.brewer_website %>
  </div>
  
  <%= submit_tag "Submit" %>
<% end %>