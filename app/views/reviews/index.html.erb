<h1>All Reviews:</h1>

<div ng-app="app">
  <div ng-controller="beersCtrl" ng-init="setup()">
    <div ng-repeat="review in reviews">
      Beer: {{ review.beer }} - Rating: {{ review.rating }}<br>
      Brewery: {{ review.brewery }} <br>
      Abv: {{ review.abv }} <br>
      Ibu: {{ review.ibu }} <br>
      Review: {{ review.review }} <br> <br> <br> 


    </div>
    
  </div>
</div>
  